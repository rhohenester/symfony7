{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Starshop: Beam up some parts!{% endblock %}
{% block body %}
	<h1>'There is still
		<strong>good</strong>
		in him.'</h1>
	<div>
		Browse through
		{{ numberOfStarships * 10 }}
		starships!
		{% if numberOfStarships > 400 %}
			<p>
				That's a shiploads of ships!
			</p>
		{% endif %}
	</div>


	<div>
		<h2>My Ship</h2>
		<table>
			<tr>
				<th>Name</th>
				<td>{{ myShip.name|upper }}</td>
			</tr>
			<tr>
				<th>Class</th>
				<td>{{ myShip.class }}</td>
			</tr>
			<tr>
				<th>Captain</th>
				<td>{{ myShip.captain }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ myShip.status }}</td>
			</tr>
		</table>
	</div>
{% endblock %}
